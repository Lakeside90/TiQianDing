<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical" 
    android:id="@+id/root_view"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@color/trans"
		android:padding="20dp"
        >

        <TextView
            android:id="@+id/delete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/take_photo_top_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="删除"
            android:textColor="@color/common_red_txt"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e1e1e1" />

        <TextView
            android:id="@+id/clear_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/take_photo_mid_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="清空"
            android:textColor="@color/common_red"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/take_photo_bottom_selector"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/common_red"
            android:textSize="18sp" 
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>