<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/white">

  
 	<ImageView   
 	    android:id="@+id/sale_icon_iv"   
        android:layout_height="90dp"   
        android:layout_width="match_parent"
        android:scaleType="fitXY" />   
        
   <TextView   
         android:id="@+id/house_name_txt"
         android:layout_width="wrap_content"   
         android:layout_height="24dp"   
         android:gravity="center_vertical"
         android:lines="1"
         android:ellipsize="end"
         android:textSize="14sp"
         android:textColor="@color/common_black_txt"
         />  
         
   <TextView   
         android:id="@+id/house_num_area_txt"
         android:layout_width="wrap_content"   
         android:layout_height="wrap_content"   
         android:gravity="center_vertical"
         android:lines="1"
         android:ellipsize="end"
         android:textSize="11sp"
         android:textColor="@color/common_gray_txt"
         />  
   <LinearLayout
       android:layout_width="wrap_content"   
       android:layout_height="wrap_content"  
       android:orientation="horizontal"
       android:paddingTop="3dp"
       >
       <TextView   
         android:id="@+id/discount_price_txt"
         android:layout_width="wrap_content"   
         android:layout_height="wrap_content"   
         android:gravity="center_vertical"
         android:textSize="13sp"
         android:textColor="@color/common_red_txt"
         />  
         
       <TextView   
         android:id="@+id/price_txt"
         android:layout_width="wrap_content"   
         android:layout_height="wrap_content"   
         android:gravity="center_vertical"
         android:layout_marginLeft="3dp"
         android:textSize="12sp"
         android:textColor="@color/common_gray_txt"
         />  
   </LinearLayout>
</LinearLayout>