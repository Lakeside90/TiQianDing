<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/window_bg"
      android:orientation="vertical">

    <!-- title  bar -->

    <include layout="@layout/common_title_bar"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_diver_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:id="@+id/phone_edit_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="修改手机号"
                android:textColor="@color/common_black_txt"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/common_gray_txt"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_diver_line"/>


        <TextView
            android:id="@+id/psw_change_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:textColor="@color/common_black_txt"
            android:textSize="14sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_diver_line"/>


        <TextView
            android:id="@+id/paypsw_change_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付密码"
            android:textColor="@color/common_black_txt"
            android:textSize="14sp"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_diver_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/common_diver_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:id="@+id/qq_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="我的QQ"
                android:textColor="@color/common_black_txt"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/qq_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/common_gray_txt"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_diver_line"/>

        <LinearLayout
            android:id="@+id/weibo_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="我的新浪微博"
                android:textColor="@color/common_black_txt"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/weibo_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/common_gray_txt"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_diver_line"/>

        <LinearLayout
            android:id="@+id/wx_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="我的微信"
                android:textColor="@color/common_black_txt"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/wx_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/common_gray_txt"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_diver_line"/>

</LinearLayout>