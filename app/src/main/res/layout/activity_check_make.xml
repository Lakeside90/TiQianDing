<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/common_title_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_conner_white_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费总额"
            android:textColor="@color/common_black_txt"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/total_money_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="询问收银员后输入"
            android:inputType="numberDecimal"
            android:textColor="@color/common_black_txt"
            android:textColorHint="@color/cccccc"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/gray_conner_white_btn"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不参与优惠金额"
            android:textColor="@color/common_black_txt"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/no_discount_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="询问收银员后输入"
            android:inputType="numberDecimal"
            android:textColor="@color/common_black_txt"
            android:textColorHint="@color/cccccc"
            android:textSize="16sp"/>
    </LinearLayout>



    <TextView
        android:id="@+id/commit_txt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/red_border_btn_selector"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="和店员已确认，立即买单"
        android:textColor="@color/white"
        android:textSize="16sp"/>


</LinearLayout>