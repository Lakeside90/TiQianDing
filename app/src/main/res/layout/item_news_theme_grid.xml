<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/common_list_bg_selector">

  
 	<ImageView   
 	    android:id="@+id/news_icon_iv"   
        android:layout_height="44dp"   
        android:layout_width="44dp"
        android:scaleType="fitXY" />   
        
   <LinearLayout
       android:layout_width="wrap_content"   
       android:layout_height="wrap_content"  
       android:orientation="vertical"
       android:gravity="center_vertical"
       android:layout_marginLeft="6dp"
       >
       <TextView   
         android:id="@+id/news_title_txt"
         android:layout_width="wrap_content"   
         android:layout_height="wrap_content"   
         android:gravity="center_vertical"
         android:textSize="15sp"
         android:maxLines="1"
         android:ellipsize="end"
         android:textColor="@color/common_black_txt"
         />  
         
       <TextView   
         android:id="@+id/news_content_txt"
         android:layout_width="wrap_content"   
         android:layout_height="wrap_content"   
         android:gravity="center_vertical"
         android:layout_marginTop="5dp"
         android:maxLines="1"
         android:ellipsize="end"
         android:textSize="12sp"
         android:textColor="@color/common_gray_txt"
         />  
   </LinearLayout>
</LinearLayout>