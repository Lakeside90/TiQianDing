<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/employee_blue">

        <ImageView
            android:id="@+id/iv_head_left"
            android:layout_width="@dimen/activity_title_height"
            android:layout_height="@dimen/activity_title_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_back"
            />

        <TextView
            android:id="@+id/tv_head_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="我是员工"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/window_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:background="@color/employee_blue"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="早上好："/>

                <ImageView
                    android:id="@+id/icon_iv"
                    android:layout_width="133dp"
                    android:layout_height="133dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/share_code"/>

            </LinearLayout>

            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/common_black_txt"
                        android:text="我的余额"/>

                    <TextView
                        android:id="@+id/money_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/common_red"
                        android:text="0元"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="right">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="立即提现"
                        android:background="@drawable/blue_conner_btn_normal"/>

                    <TextView
                        android:id="@+id/num_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/common_gray_txt"
                        android:text="本月剩余提现次数：0/0"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/account_txt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="账户明细"
                    android:textSize="16sp"
                    android:textColor="@color/common_black_txt"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawableLeft="@drawable/i_zhmx"
                    android:drawablePadding="5dp"
                    android:background="@drawable/common_list_bg_selector"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/common_diver_line"/>

                <TextView
                    android:id="@+id/withdraw_txt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="提现记录"
                    android:textSize="16sp"
                    android:textColor="@color/common_black_txt"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawableLeft="@drawable/i_txjl"
                    android:drawablePadding="5dp"
                    android:background="@drawable/common_list_bg_selector"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/common_diver_line"/>

                <TextView
                    android:id="@+id/comment_txt"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="我的评价"
                    android:textSize="16sp"
                    android:textColor="@color/common_black_txt"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawableLeft="@drawable/i_wdpj"
                    android:drawablePadding="5dp"
                    android:background="@drawable/common_list_bg_selector"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_diver_line"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>