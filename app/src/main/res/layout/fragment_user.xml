<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/common_blue_bg"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/user_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="15dp"
                android:background="@color/common_blue_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                 <com.xkhouse.fang.widget.circle.CircleImageView
		            android:id="@+id/user_icon_iv"
		            android:layout_width="80dp"
		            android:layout_height="80dp"
		            app:border_width="2dp"
                    android:layout_marginTop="5dp"
		            app:border_color="#53c3f3"/>"
                
                 
                <TextView
                    android:id="@+id/username_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="未登录"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/common_blue_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/message_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/message_num_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="0"/>

                        <ImageView
                            android:id="@+id/message_iv"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:src="@drawable/red_cricle_bg"
                            android:layout_marginLeft="3dp"
                            android:visibility="invisible"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:text="消息"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="33dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:id="@+id/wallet_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/wallet_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:text="钱包"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="33dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:id="@+id/favorite_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/favorite_num_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:text="收藏"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/common_diver_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/recommend_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="我的推荐"
                        android:drawableTop="@drawable/my_ico_tuijian"
                        android:drawablePadding="13dp"
                        />

                </LinearLayout>


                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/common_diver_line"/>

                <LinearLayout
                    android:id="@+id/custom_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                    <TextView
                        android:id="@+id/custom_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="我的定制"
                        android:drawableTop="@drawable/my_ico_dingzhi"
                        android:drawablePadding="13dp"/>
                </LinearLayout>


                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/common_diver_line"/>

                <LinearLayout
                    android:id="@+id/release_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                    <TextView
                        android:id="@+id/release_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="我的发布"
                        android:drawableTop="@drawable/my_ico_fabu"
                        android:drawablePadding="13dp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_diver_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/calculator_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                <TextView
                    android:id="@+id/calculator_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="15sp"
                    android:text="贷款计算器"
                    android:drawableTop="@drawable/my_ico_calculator"
                    android:drawablePadding="13dp"
                    />
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/common_diver_line"/>

                <LinearLayout
                    android:id="@+id/buy_ability_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">
                <TextView
                    android:id="@+id/buy_ability_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="15sp"
                    android:text="购房能力评估"
                    android:drawableTop="@drawable/my_ico_zoom"
                    android:drawablePadding="13dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/common_diver_line"/>

                <LinearLayout
                    android:id="@+id/house_baike_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">
                    <TextView
                        android:id="@+id/house_baike_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="购房百科"
                        android:drawableTop="@drawable/my_ico_baike"
                        android:drawablePadding="13dp"/>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_diver_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:id="@+id/zuolin_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                <TextView
                    android:id="@+id/zuolin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="15sp"
                    android:text="左邻右里"
                    android:drawableTop="@drawable/my_ico_logo"
                    android:drawablePadding="13dp"
                    />
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/common_diver_line"/>

                <LinearLayout
                    android:id="@+id/setting_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">
                <TextView
                    android:id="@+id/setting_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="15sp"
                    android:text="设置"
                    android:drawableTop="@drawable/my_ico_set_up"
                    android:drawablePadding="13dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/common_diver_line"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/common_black_txt"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/server_call_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/common_red"
                android:text="客服电话：400-887-1216"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/common_gray_txt"
                android:text="(服务时间：08：30 ~ 17：30)"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>