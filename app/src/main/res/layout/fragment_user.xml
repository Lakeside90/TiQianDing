<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/common_red"
        android:gravity="right|center_vertical">

        <ImageView
            android:id="@+id/setting_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon_setting"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/user_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_red"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                 <com.xkhouse.fang.widget.circle.CircleImageView
		            android:id="@+id/user_icon_iv"
		            android:layout_width="60dp"
		            android:layout_height="60dp"
		            app:border_width="2dp"
                    android:layout_margin="15dp"
		            app:border_color="#dd6466"
                     android:src="@drawable/user_sethead_default"/>"
                
                 
                <TextView
                    android:id="@+id/username_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:layout_marginRight="15dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/message_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/message_num_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/common_red"
                            android:text="0"/>

                        <ImageView
                            android:id="@+id/message_iv"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:src="@drawable/red_cricle_bg"
                            android:layout_marginLeft="3dp"
                            android:visibility="invisible"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/common_gray_txt"
                        android:layout_marginTop="5dp"
                        android:text="我的余额（元）"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="33dp"
                    android:background="@color/common_diver_line"/>

                <LinearLayout
                    android:id="@+id/favorite_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/favorite_num_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/common_red"
                        android:text="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/common_gray_txt"
                        android:layout_marginTop="5dp"
                        android:text="抽奖机会（次）"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/common_black_txt"
                android:textSize="20sp"
                android:drawableRight="@drawable/icon_arrow_right"
                android:text="我是员工"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/recommend_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="我的预定"
                        android:drawableTop="@drawable/my_ico_tuijian"
                        android:drawablePadding="13dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/custom_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                    <TextView
                        android:id="@+id/custom_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="我的抽奖"
                        android:drawableTop="@drawable/my_ico_dingzhi"
                        android:drawablePadding="13dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/release_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                    <TextView
                        android:id="@+id/release_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="我的买单"
                        android:drawableTop="@drawable/my_ico_fabu"
                        android:drawablePadding="13dp"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/calculator_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                <TextView
                    android:id="@+id/calculator_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="15sp"
                    android:text="我的评论"
                    android:drawableTop="@drawable/my_ico_calculator"
                    android:drawablePadding="13dp"
                    />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buy_ability_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">
                <TextView
                    android:id="@+id/buy_ability_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="15sp"
                    android:text="我的收藏"
                    android:drawableTop="@drawable/my_ico_zoom"
                    android:drawablePadding="13dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/house_baike_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">
                    <TextView
                        android:id="@+id/house_baike_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/common_gray_txt"
                        android:textSize="15sp"
                        android:text="我的消息"
                        android:drawableTop="@drawable/my_ico_baike"
                        android:drawablePadding="13dp"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:id="@+id/zuolin_lay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/common_list_bg_selector">

                <TextView
                    android:id="@+id/zuolin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_gray_txt"
                    android:textSize="15sp"
                    android:text="我的浏览"
                    android:drawableTop="@drawable/my_ico_logo"
                    android:drawablePadding="13dp"
                    />
                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/common_black_txt"
                    android:textSize="15sp"
                    android:visibility="invisible"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/common_black_txt"
                    android:textSize="15sp"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/server_call_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/common_gray_txt"
                android:text="客服电话：400-888-8888"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>