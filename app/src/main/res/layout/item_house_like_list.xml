<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_list_bg_selector"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/house_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/house_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="拉菲红酒拉菲红酒拉菲红酒拉菲红酒拉菲红酒"
        android:textColor="@color/common_black_txt"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="距离结束 00:55:06"
        android:textColor="@color/common_red"
        android:textSize="12sp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="40"
        android:progressDrawable="@drawable/progress_bar_drawable"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="256"
            android:textColor="@color/c_666666"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="340"
            android:textColor="@color/c_666666"
            android:textSize="12dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="已参与人次"
            android:textColor="@color/common_gray_txt"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="剩余人次"
            android:textColor="@color/common_gray_txt"
            android:textSize="12dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="108dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_conner_btn_normal"
        android:gravity="center"
        android:text="参与抽奖"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>