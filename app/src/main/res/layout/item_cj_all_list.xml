<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_list_bg_selector"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="拉菲红酒拉菲红酒拉菲红酒拉菲红酒拉菲红酒"
            android:textColor="@color/common_black_txt"
            android:textSize="16sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/progress_bar_drawable"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/join_count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/common_red"
                    android:textSize="13sp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/count_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/c_666666"
                    android:textSize="13sp"
                    android:text="/0"/>
            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/join_txt"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/red_conner_btn_normal"
                android:gravity="center"
                android:text="立即参与"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/djx_txt"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/red_border_conner_btn_bg"
                android:gravity="center"
                android:text="待揭晓"
                android:textColor="@color/common_red"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>