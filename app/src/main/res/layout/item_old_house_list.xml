<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="78dp" >

        <ImageView
            android:id="@+id/house_icon_iv"
            android:layout_width="100dp"
            android:layout_height="78dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/sale_type_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/common_green"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="中介"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/house_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="信达天御 "
            android:textColor="@color/common_black_txt"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/house_area_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:text="包河区  西湖花园"
            android:textColor="@color/common_gray_txt"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:id="@+id/house_space_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="一室一厅    97㎡"
                android:textColor="@color/common_gray_txt"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/house_distance_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/house_space_txt"
                android:drawableLeft="@drawable/icon_position"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="0.68km"
                android:textColor="@color/common_gray_txt"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/house_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="60万"
                android:textColor="@color/common_red_txt"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>