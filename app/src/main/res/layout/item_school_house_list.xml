<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >


    <ImageView
        android:id="@+id/school_icon_iv"
        android:layout_width="100dp"
        android:layout_height="78dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/school_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/common_black_txt"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/school_important_txt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="重"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/red_cricle_bg"/>

            <TextView
                android:id="@+id/school_level_txt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp"
                android:background="@drawable/red_conner_btn_normal"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/school_address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/school_distance_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/house_area_txt"
                android:drawableLeft="@drawable/icon_position"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/common_gray_txt"
                android:textSize="12sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/school_num_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/common_gray_txt"
            android:textSize="12sp" />

            <TextView
                android:id="@+id/old_count_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#f28d34"
                android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>