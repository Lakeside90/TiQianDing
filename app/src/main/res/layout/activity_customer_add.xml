<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/window_bg"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <!-- title  bar -->

    <include
        android:id="@+id/title_view"
        layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/window_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="客户信息"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/contact_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_contact" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_diver_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户姓名："
                        android:textColor="@color/common_black_txt"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/customer_name_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="请输入客户姓名"
                        android:textColorHint="@color/common_gray_txt"
                        android:lines="1"
                        android:textColor="@color/common_black_txt"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_diver_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户电话："
                        android:textColor="@color/common_black_txt"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/customer_phone_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:inputType="phone"
                        android:hint="请输入客户手机号"
                        android:textColorHint="@color/common_gray_txt"
                        android:lines="1"
                        android:textColor="@color/common_black_txt"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_diver_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/window_bg"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="客户意向"
                android:textColor="#666666"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_diver_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所属城市："
                        android:textColor="@color/common_black_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/city_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:hint="请输入客户所在城市"
                        android:textColorHint="@color/common_gray_txt"
                        android:lines="1"
                        android:textColor="@color/common_black_txt"
                        android:textSize="15sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_diver_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期望楼盘："
                        android:textColor="@color/common_black_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/project_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择客户期望楼盘"
                        android:textColorHint="@color/common_gray_txt"
                        android:lines="1"
                        android:textColor="@color/common_black_txt"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_diver_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物业类别："
                        android:textColor="@color/common_black_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/category_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:hint="请选择客户期望物业类型"
                        android:textColorHint="@color/common_gray_txt"
                        android:lines="1"
                        android:textColor="@color/common_black_txt"
                        android:textSize="15sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_diver_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期望均价："
                        android:textColor="@color/common_black_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawableRight="@drawable/icon_arrow_right"
                        android:hint="请选择客户期望均价"
                        android:textColorHint="@color/common_gray_txt"
                        android:lines="1"
                        android:textColor="@color/common_black_txt"
                        android:textSize="15sp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/common_diver_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:background="@color/white"
                    android:gravity="left|top"
                    android:orientation="horizontal"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textColor="@color/common_black_txt"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/remark_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="left|top"
                        android:hint="请输入您需要备注的信息"
                        android:textColorHint="@color/common_gray_txt"
                        android:textColor="@color/common_black_txt"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_diver_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/customer_submit_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/blue_corner_btn_selector"
                    android:gravity="center"
                    android:text="立即推荐"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>