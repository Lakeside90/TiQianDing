<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_list_bg_selector"
              android:orientation="horizontal"
              android:padding="15dp">


    <com.xkhouse.fang.widget.circle.CircleImageView
        android:id="@+id/user_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/user_sethead_default"
        app:border_color="@color/white"
        app:border_width="1dp"/>"




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/nick_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/common_black_txt"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/common_gray_txt"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/star_one_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/storeup"/>
            <ImageView
                android:id="@+id/star_two_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/storeup"/>
            <ImageView
                android:id="@+id/star_three_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/storeup"/>
            <ImageView
                android:id="@+id/star_four_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/storeup"/>
            <ImageView
                android:id="@+id/star_five_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/storeup"/>
        </LinearLayout>


        <TextView
            android:id="@+id/content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/c_666666"
            android:text=""/>

        <com.xkhouse.fang.widget.ScrollGridView
            android:id="@+id/image_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:numColumns="3"
            android:scrollbars="none"/>

    </LinearLayout>


</LinearLayout>