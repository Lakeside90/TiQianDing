<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/release_cb"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/imagepicker_checkbox_selector"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/release_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="2"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/common_black_txt"
            android:text=""/>

        <TextView
            android:id="@+id/release_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/release_title_txt"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:text=""/>

        <TextView
            android:id="@+id/release_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/release_title_txt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:textSize="16sp"
            android:textColor="@color/common_red"
            android:text="修改"/>

    </RelativeLayout>


</LinearLayout>