<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical" 
    android:id="@+id/root_view"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@color/trans"
		android:padding="20dp"
        >

        <TextView
            android:id="@+id/take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/take_photo_top_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="拍照"
            android:textColor="#5f5959"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e1e1e1" />

        <TextView
            android:id="@+id/take_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/take_photo_mid_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="从相册选择"
            android:textColor="#5f5959"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/take_photo_bottom_selector"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#75b7ea"
            android:textSize="18sp" 
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

</LinearLayout>